{
    "$id": "newProduct",
    "type": "object",
    "properties": {
        "nftMetadataID": {
            "type": "string",
            "isNotEmpty": true,
            "minLength": 6
        },
        "productDescription": {
            "type": "string",
            "isNotEmpty": true,
            "minLength": 25
        },
        "productCategory": {
            "type": "string",
            "isNotEmpty": true
        },
        "productPublished": {
            "type": "boolean"
        },
        "productPermalink": {
            "type": "string",
            "isNotEmpty": true
        }
    },
    "errorMessage": {
        "properties": {
            "productPrice": "Should be a full 2 decimal value. Eg: 10.99",
            "productPublished": "Should be either true or false",
            "productComment": "Should be either true or false"
        }
    },
    "required": [
        "nftMetadataID",
        "productDescription"
    ]
}